@using Stushbr.Core.Enums
@model Stushbr.AdminUtilsWeb.Domain.Items.Contracts.ItemViewModel
@{
    var itemTypes = Enum.GetValues<ItemType>().Select(value => new SelectListItem
    {
        Text = value.ToString(),
        Value = ((int)value).ToString()
    });
}

<div class="modal fade" id="editItemModal-@Model.Id" tabindex="-1" aria-labelledby="editItemModalLabel-@Model.Id" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editItemModalLabel-@Model.Id">Edit Item (@Model.DisplayName)</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="UpdateItem" method="post" asp-route-id="@Model.Id">
                    <input type="hidden" asp-for="Id"/>
                    <div class="mb-3">
                        <label for="displayName" class="form-label">Display Name</label>
                        <input type="text" class="form-control" id="displayName" asp-for="DisplayName" required>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <input type="text" class="form-control" id="description" asp-for="Description" required>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Item External Identifier</label>
                        <input type="text" class="form-control" id="itemIdentifier" asp-for="ItemIdentifier" required>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" step="0.01" class="form-control" id="price" asp-for="Price" required>
                    </div>
                    <div class="mb-3">
                        <label for="availableSince" class="form-label">Available Since</label>
                        <input type="datetime-local" class="form-control" id="availableSince" asp-for="AvailableSince" required>
                    </div>
                    <div class="mb-3">
                        <label for="availableBefore" class="form-label">Available Before</label>
                        <input type="datetime-local" class="form-control" id="availableBefore" asp-for="AvailableBefore" required>
                    </div>
                    <div class="mb-3">
                        <label for="type" class="form-label">Type</label>
                        <select asp-for="Type" asp-items="itemTypes" class="form-control" id="type" required></select>
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="isEnabled" asp-for="IsEnabled">
                        <label class="form-check-label" for="isEnabled">Is Enabled</label>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>